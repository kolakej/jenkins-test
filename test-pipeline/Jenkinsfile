pipeline {
    agent any 
     environment {
       version = "${env.BUILD_NUMBER}"
       workspace = "${env.WORKSPACE}"
        artifact_path = "target/my-app-1.0.${version}-RELEASES.jar"
     }
      parameters {
         choiceParam('OPTION', ['option 1 (default)', 'option 2', 'option 3'])
    }
     stages {
        stage('Build') {
          steps {
            dir("test-pipeline"){
            sh "mvn versions:set -DnewVersion=1.0.${version}-RELEASES"
            sh "mvn -Dmaven.test.failure.ignore clean package"
        }
      }
    }
        stage('Deploy'){
          steps {
           dir("test-pipeline"){
                  nexusPublisher nexusInstanceId: 'nexus', nexusRepositoryId: 'maven-releases', packages: [[$class: 'MavenPackage', mavenAssetList: [[classifier: '', extension: '', filePath: "${artifact_path}"]], mavenCoordinate: [artifactId: "my-app", groupId: 'nexus.com', packaging: 'jar', version: "1.0.${version}-RELEASES"]]]
          }           
          }
        }
     }
}  