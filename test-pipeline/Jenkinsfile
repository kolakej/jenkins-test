pipeline {
    agent any 
     environment {
       version = "${env.BUILD_NUMBER}"
       workspace = "${env.WORKSPACE}"
     }
     stages {
        stage('Build') {
          steps {
            dir("test-pipeline"){
            sh "mvn versions:set -DnewVersion=1.0.${version}-SNAPSHOT"
            sh "mvn -Dmaven.test.failure.ignore clean package"
        }
      }
    }
       stage('Deploy') {
         steps {
           dir("test-pipeline/target"){
              nexusArtifactUploader artifacts: [[artifactId: 'my-app', classifier: '', file: 'my-app-1.0.${version}-SNAPSHOT.jar', type: 'jar']], credentialsId: '6b561cf9-acc1-4030-bcf8-9cf3e8a4c7fd', groupId: 'com.mycompany.app', nexusUrl: '35.240.32.10:8081', nexusVersion: 'nexus3', protocol: 'http', repository: 'maven-snapshots', version: '1.0.${version}-SNAPSHOT'
            } 
          }
        }
      }
    }