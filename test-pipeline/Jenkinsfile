pipeline {
    agent any 
     environment {
       version = "${env.BUILD_NUMBER}"
       workspace = "${env.WORKSPACE}"
     }
     stages {
        stage('Build') {
          steps {
            dir("test-pipeline"){
            sh "mvn versions:set -DnewVersion=1.0.${version}-SNAPSHOT"
            sh "mvn -Dmaven.test.failure.ignore clean package"
        }
      }
    }
  
        stage('Deploy'){
          steps {
           dir("test-pipeline"){
                  path = workspace + "target/my-app-1.0.${version}-SNAPSHOT.jar"
                  nexusPublisher nexusInstanceId: 'nexus', nexusRepositoryId: 'my-snapshot', packages: [[$class: 'MavenPackage', mavenAssetList: [[classifier: '', extension: '', filePath: path]], mavenCoordinate: [artifactId: "my-app", groupId: 'nexus.com', packaging: 'jar', version: "1.0.${version}-SNAPSHOT"]]]
          }           
          }
        }
     }
}  